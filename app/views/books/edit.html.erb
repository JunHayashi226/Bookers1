<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
    <div class="form-error">
    <% @book.errors.full_messages.each do |message| %>
        <%= "error:"+message %>
    <% end %>
    </div>
    <% end %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<br>
<%= f.submit "Update Book" %>
<br>
<%= link_to "Show", book_path(@book) %><h4>|</h4><%= link_to "Back", books_path %>
<% end %>
